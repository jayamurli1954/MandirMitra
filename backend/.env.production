# MandirMitra Production Configuration
# =====================================
# ⚠️ NEVER commit this file to Git!
# ⚠️ This file contains production secrets

# Deployment Mode
DEPLOYMENT_MODE=standalone

# Application
APP_NAME=MandirMitra
APP_VERSION=1.0.0
DEBUG=False

# Security - PRODUCTION SECRETS
# ⚠️ REPLACE THESE WITH GENERATED VALUES BEFORE DEPLOYMENT
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY_32_BYTES
JWT_SECRET_KEY=REPLACE_WITH_GENERATED_JWT_SECRET_KEY_64_BYTES
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=120

# Data Encryption
# ⚠️ USE THE SAME KEY FROM YOUR DEVELOPMENT .env
# Changing this will make existing encrypted data unreadable!
ENCRYPTION_KEY=i_orUan_r6ngv6SKD8gEE4cirDwjAMPyT5cSO3hXGfw=

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGITS=True
PASSWORD_REQUIRE_SPECIAL=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
