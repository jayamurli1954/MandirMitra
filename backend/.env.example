# MandirMitra Environment Configuration
# ======================================
# Copy this file to .env and fill in your actual values
#
# IMPORTANT: Never commit the actual .env file to Git!

# Deployment Mode
DEPLOYMENT_MODE=standalone

# Application
APP_NAME=MandirMitra
APP_VERSION=1.0.0
DEBUG=True

# Security
# ⚠️ IMPORTANT: Generate your own secrets for production!
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=120

# Data Encryption
# ⚠️ Generate using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# ⚠️ NEVER change this after encrypting data - data will be lost!
ENCRYPTION_KEY=

# Database
# Replace YOUR_PASSWORD with your actual database password
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/temple_db

# Server
HOST=0.0.0.0
PORT=8000

# CORS
# For development - use localhost
# For production - replace with your actual domain
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Features (Optional)
SMS_ENABLED=False
EMAIL_ENABLED=False
PAYMENT_ENABLED=False

# Backup
BACKUP_ENABLED=True
BACKUP_PATH=backups
BACKUP_RETENTION_DAYS=30
